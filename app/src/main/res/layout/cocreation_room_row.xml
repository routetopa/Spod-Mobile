<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:layout_height="0dp"
    android:layout_weight=".20"
    android:background="#c8c8c8DD"
    android:padding="8dp">

    <!--<ImageView
        android:id="@+id/userImage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/avatar5"
        android:layout_alignParentTop="true"
        android:background="@drawable/avatar"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="4dp"
        android:adjustViewBounds="false" />-->

    <eu.spod.isislab.spodapp.utils.CustomImageViewCircularShape
        android:id="@+id/room_owner_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/avatar5"
        android:background="@drawable/circle"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="4dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/room_name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/room_owner_name"
        android:text="Mario Rossi"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:textSize="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="false"
        android:lines="2"
        android:maxLength="100"
        android:layout_below="@+id/room_owner_image" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/room_name"
        android:text="Room time"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="84dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:textSize="16dp"
        android:maxLength="20"
        android:textColor="#000000"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:gravity="left|right"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/room_description"
        android:text="Room description"
        android:layout_marginLeft="84dp"
        android:layout_marginRight="32dp"
        android:textSize="12dp"
        android:gravity="left|bottom|center_horizontal"
        android:lines="2"
        android:maxLength="100"
        android:textStyle="italic"
        android:layout_alignBottom="@+id/room_name" />
    <!--android:layout_marginTop="48dp"-->


</RelativeLayout>