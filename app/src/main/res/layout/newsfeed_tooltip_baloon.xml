<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <ImageView
        android:id="@+id/newsfeed_tooltip_arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tooltip_balloon_arrow_up_bg"
        android:layout_margin="-1dp"/>

    <TextView
        android:id="@+id/newsfeed_tooltip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/newsfeed_post_status_text_default"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@drawable/tooltip_balloon_content_bg"
        android:minHeight="30dp"
        android:maxHeight="150dp"
        android:padding="@dimen/newsfeed_post_content_padding_default"/>

    <ImageView
        android:id="@+id/newsfeed_tooltip_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tooltip_balloon_arrow_down_bg"
        android:layout_margin="-1dp"/>
</LinearLayout>