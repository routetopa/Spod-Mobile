<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="1dp"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/newsfeed_post_base_header"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/newsfeed_post_item_header"/>

        <TextView
            android:id="@+id/newsfeed_image_content_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/newsfeed_post_status_text_default"
            android:paddingLeft="@dimen/newsfeed_post_content_padding_default"
            android:paddingStart="@dimen/newsfeed_post_content_padding_default"
            android:paddingRight="@dimen/newsfeed_post_content_padding_default"
            android:paddingEnd="@dimen/newsfeed_post_content_padding_default"
            android:paddingBottom="@dimen/newsfeed_post_content_padding_small"/>

        <ImageView
            android:id="@+id/newsfeed_image_content_imageview"
            android:transitionName="@string/newsfeed_image_transition_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="250dp"
            android:visibility="visible"
            android:paddingTop="@dimen/newsfeed_post_content_padding_small"/>

        <include
            android:id="@+id/newsfeed_post_base_footer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/newsfeed_post_item_footer"/>
    </LinearLayout>
</android.support.v7.widget.CardView>