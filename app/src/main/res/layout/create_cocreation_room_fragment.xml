<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:clickable="true">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="30">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#7b7b7b"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textIsSelectable="true"
            android:paddingLeft="8dp"
            android:paddingTop="8dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/new_room_name"
            android:layout_gravity="center_vertical"
            android:textAlignment="gravity"
            android:padding="8dp"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="30">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:textColor="#7b7b7b"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textIsSelectable="true"
            android:paddingLeft="8dp"
            android:paddingTop="8dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:id="@+id/new_room_subject"
                android:layout_gravity="center_vertical"
                android:textAlignment="gravity"
                android:textStyle="normal"
                android:textSize="16dp"
                android:gravity="left"
                android:maxLines="4"
                android:singleLine="false"
                android:isScrollContainer="true"
                android:focusableInTouchMode="true"
                android:padding="8dp" />
        </LinearLayout>

        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="30">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Goal"
                android:textColor="#7b7b7b"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textIsSelectable="true"
                android:paddingLeft="8dp"
                android:paddingTop="8dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:id="@+id/new_room_goal"
                android:layout_gravity="center_vertical"
                android:textAlignment="gravity"
                android:textStyle="normal"
                android:textSize="16dp"
                android:gravity="left"
                android:maxLines="4"
                android:singleLine="false"
                android:isScrollContainer="true"
                android:focusableInTouchMode="true"
                android:padding="8dp" />
        </LinearLayout>

        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="30">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Invitation text"
                android:textColor="#7b7b7b"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textIsSelectable="true"
                android:paddingLeft="8dp"
                android:paddingTop="8dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:id="@+id/new_room_invitation_text"
                android:layout_gravity="center_vertical"
                android:textAlignment="gravity"
                android:textStyle="normal"
                android:textSize="16dp"
                android:gravity="left"
                android:maxLines="4"
                android:singleLine="false"
                android:isScrollContainer="true"
                android:focusableInTouchMode="true"
                android:padding="8dp" />
        </LinearLayout>

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="100"
        android:forceHasOverlappingRendering="true"
        style="60">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#7b7b7b"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textIsSelectable="true"
            android:paddingLeft="8dp"
            android:paddingTop="8dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textMultiLine"
            android:id="@+id/new_room_description"
            android:layout_gravity="center_vertical"
            android:textAlignment="gravity"
            android:textStyle="normal"
            android:textSize="16dp"
            android:gravity="left"
            android:maxLines="4"
            android:singleLine="false"
            android:isScrollContainer="true"
            android:focusableInTouchMode="true"
            android:padding="8dp" />

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/new_room_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_bar_new_room"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF" />

</LinearLayout>

