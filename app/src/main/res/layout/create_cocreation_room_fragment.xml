<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:clickable="true">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="35"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="@string/cocreation_room_new_room_name_string"
            android:textColor="#7b7b7b"
            android:textIsSelectable="true"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/new_room_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:inputType="text"
            android:padding="8dp"
            android:textAlignment="gravity"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="35"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="@string/cocreation_room_new_room_subject_string"
            android:textColor="#7b7b7b"
            android:textIsSelectable="true"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/new_room_subject"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:focusableInTouchMode="true"
            android:gravity="left"
            android:inputType="textMultiLine"
            android:isScrollContainer="true"
            android:maxLines="4"
            android:padding="8dp"
            android:singleLine="false"
            android:textAlignment="gravity"
            android:textSize="16dp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="35"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="@string/cocreation_room_new_room_goal_string"
            android:textColor="#7b7b7b"
            android:textIsSelectable="true"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/new_room_goal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:focusableInTouchMode="true"
            android:gravity="left"
            android:inputType="textMultiLine"
            android:isScrollContainer="true"
            android:maxLines="4"
            android:padding="8dp"
            android:singleLine="false"
            android:textAlignment="gravity"
            android:textSize="16dp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="35"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="@string/cocreation_room_new_room_invitation_text_string"
            android:textColor="#7b7b7b"
            android:textIsSelectable="true"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/new_room_invitation_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:focusableInTouchMode="true"
            android:gravity="left"
            android:inputType="textMultiLine"
            android:isScrollContainer="true"
            android:maxLines="4"
            android:padding="8dp"
            android:singleLine="false"
            android:textAlignment="gravity"
            android:textSize="16dp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        style="60"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="70"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:forceHasOverlappingRendering="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="@string/cocreation_room_new_room_description_string"
            android:textColor="#7b7b7b"
            android:textIsSelectable="true"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/new_room_description"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:focusableInTouchMode="true"
            android:gravity="left"
            android:inputType="textMultiLine"
            android:isScrollContainer="true"
            android:maxLines="4"
            android:padding="8dp"
            android:singleLine="false"
            android:textAlignment="gravity"
            android:textSize="16dp"
            android:textStyle="normal" />

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/new_room_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_bar_new_room"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF" />

</LinearLayout>

